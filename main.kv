<LoginScreen>:
    name:"loginScreen"
    email : email
    password:password
    BoxLayout:
        orientation:"vertical"
        canvas:
            Color:
                rgba: 1, 1, 1,1
            Rectangle:
                pos: self.pos
                size: self.size
    
        ScrollableTopMenu:
     
        GridLayout:
            pos_hint:{"center_x":0.5,"center_y":0.4}
            size_hint_x:(0.9)
            cols:1
            rows:3

            canvas:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            MDTextField:
                id:email
                hint_text:"Email"
                icon_right: "account"
                width: 100
                size_hint_x:0.5
                font_size: 18
                pos_hint: {"center_x":0.5}
            MDTextField:
                id:password
                hint_text:"Password"
                icon_right: "eye-off"
                size_hint_x:0.5
                width: 100
                font_size: 18
                pos_hint: {"center_x":0.5}
                password:True
            MDFlatButton:
                text: "Login"
                font_size:12
                elevation:5
                halign:"right"
                pos_hint:{"center_x":0.5}
                on_press:root.login()
        
        BottomMenu:

<WelcomeScreen>:
    name:"welcomeScreen"
    welcomeName:welcomeName
  
    BoxLayout:
        orientation:"vertical"
    
        ScrollableTopMenu:
        GridLayout:
            pos_hint:{"center_x":0.5}
