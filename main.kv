                    size: self.size
            
            Label:
                id:welcomeName
                bold:True
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
                color:(0, 0, 0,1)
                padding_y:20

            Label:
                id:welcomeText
                pos_hint:{"center_x":0.5,"center_y":0.7}
                text_size: self.width, None
                text:"What a wonderful day to be alive. So much Kivy and Pythoning to do. But wait what is all the fuss about"
                size_hint: 1, None
                height: self.texture_size[1]
                color:(0, 0, 0,1)
                padding_y:15
        BottomMenu:

